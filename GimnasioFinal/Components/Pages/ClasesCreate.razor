@page "/clases/create"
@using GimnasioFinal.Models
@using GimnasioFinal.Data
@inject GimnasioContext Db
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="dashboard-wrapper animate-fade-in">
    <div class="container" style="max-width: 600px;">
        <div class="d-flex align-items-center mb-4">
            <button class="btn-back me-3" @onclick="Cancelar"><i class="bi bi-arrow-left"></i></button>
            <h2 class="text-neon fw-bold m-0">NUEVA CLASE</h2>
        </div>

        <div class="glass-panel p-4">
            <EditForm Model="clase" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="label-neon">NOMBRE DE LA CLASE</label>
                    <InputText class="form-control-dark" @bind-Value="clase.NombreClase" placeholder="Ej: Yoga" />
                    <ValidationMessage For="@(() => clase.NombreClase)" class="text-danger small" />
                </div>
                <div class="mb-3">
                    <label class="label-neon">INSTRUCTOR</label>
                    <InputText class="form-control-dark" @bind-Value="clase.Instructor" placeholder="Nombre del coach" />
                </div>
                <div class="row">
                    <div class="col-md-7 mb-3">
                        <label class="label-neon">HORARIO</label>
                        <InputDate Type="InputDateType.DateTimeLocal" class="form-control-dark" @bind-Value="clase.Horario" />
                    </div>
                    <div class="col-md-5 mb-3">
                        <label class="label-neon">CUPOS</label>
                        <InputNumber class="form-control-dark" @bind-Value="clase.CuposDisponibles" />
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-neon py-2">GUARDAR CLASE</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<style>
    .dashboard-wrapper {
        padding: 40px 20px;
    }

    .text-neon {
        color: #ccff00;
        text-shadow: 0 0 10px rgba(204, 255, 0, 0.4);
    }

    .glass-panel {
        background: rgba(30, 30, 30, 0.8);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 20px;
    }

    .label-neon {
        color: #ccff00;
        font-size: 0.75rem;
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-dark {
        background: rgba(0,0,0,0.3);
        border: 1px solid #444;
        color: white;
        padding: 12px;
        border-radius: 10px;
        width: 100%;
    }

        .form-control-dark:focus {
            border-color: #ccff00;
            outline: none;
            box-shadow: 0 0 10px rgba(204,255,0,0.2);
        }

    .btn-neon {
        background: #ccff00;
        color: #000;
        font-weight: 800;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-neon:hover {
            background: #fff;
            box-shadow: 0 0 20px #ccff00;
        }

    .btn-back {
        background: none;
        border: 1px solid #444;
        color: #fff;
        border-radius: 50%;
        width: 40px;
        height: 40px;
    }
</style>

@code {
    private Clase clase = new() { Horario = DateTime.Now };
    private async Task Guardar()
    {
        await Db.Clases.AddAsync(clase);
        await Db.SaveChangesAsync();
        Nav.NavigateTo("/clases");
    }
    private void Cancelar() => Nav.NavigateTo("/clases");
}