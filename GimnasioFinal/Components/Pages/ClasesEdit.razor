@page "/clases/edit/{Id:int}"
@inject GimnasioContext Db
@inject NavigationManager Nav
@rendermode InteractiveServer

<h3>Editar Clase</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (cargando)
{
    <p>Cargando...</p>
}
else if (clase == null)
{
    <p class="text-danger">No se encontró la clase.</p>
}
else
{
    <EditForm Model="clase" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nombre de la Clase</label>
            <InputText class="form-control" @bind-Value="clase.NombreClase" />
        </div>

        <div class="mb-3">
            <label class="form-label">Instructor</label>
            <InputText class="form-control" @bind-Value="clase.Instructor" />
        </div>

        <div class="mb-3">
            <label class="form-label">Horario (Fecha y Hora)</label>
            <InputDate Type="InputDateType.DateTimeLocal" class="form-control" @bind-Value="clase.Horario" />
        </div>

        <div class="mb-3">
            <label class="form-label">Cupos disponibles</label>
            <InputNumber class="form-control" @bind-Value="clase.CuposDisponibles" />
        </div>

        <button class="btn btn-primary" type="submit" disabled="@guardando">Guardar</button>
        <button class="btn btn-secondary ms-2" type="button" @onclick="Cancelar" disabled="@guardando">Cancelar</button>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Clase? clase;
    private bool cargando = true;
    private bool guardando = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            clase = await Db.Clases.FindAsync(Id);
            if (clase == null)
            {
                errorMessage = "No se encontró la clase.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar: " + ex.Message;
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task Guardar()
    {
        try
        {
            guardando = true;

            if (clase != null)
            {
                Db.Clases.Update(clase);
                await Db.SaveChangesAsync();
                Nav.NavigateTo("/clases");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error al guardar: " + ex.Message;
        }
        finally
        {
            guardando = false;
        }
    }

    private void Cancelar()
    {
        Nav.NavigateTo("/clases");
    }
}
