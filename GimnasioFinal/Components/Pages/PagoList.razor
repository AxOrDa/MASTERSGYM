@page "/pagos"
@using Microsoft.EntityFrameworkCore
@using GimnasioFinal.Data
@using GimnasioFinal.Models
@inject GimnasioContext Db
@inject NavigationManager Nav
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="dashboard-wrapper animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-neon fw-bold"><i class="bi bi-cash-stack"></i> HISTORIAL DE PAGOS</h2>
        <button class="btn btn-neon" @onclick="Crear">
            <i class="bi bi-plus-circle"></i> REGISTRAR PAGO
        </button>
    </div>

    <div class="glass-panel p-4 mb-4">
        <div class="row g-3">
            <div class="col-md-5">
                <label class="label-neon">FILTRAR POR CLIENTE</label>
                <select class="form-control-dark" @onchange="FiltrarPorCliente">
                    <option value="0">-- Todos los clientes --</option>
                    @if (todosClientes != null)
                    {
                        @foreach (var c in todosClientes)
                        {
                            <option value="@c.IdCliente">@c.Nombre @c.Apellido</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="label-neon">TIPO DE MEMBRESÍA</label>
                <select class="form-control-dark" @onchange="FiltrarPorTipo">
                    <option value="">-- Todos los tipos --</option>
                    <option value="Mensual">Mensual</option>
                    <option value="Anual">Anual</option>
                    <option value="Por Clase">Por Clase</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <div class="total-badge w-100 text-center">
                    <small>TOTAL FILTRADO</small>
                    <div class="fs-4 fw-bold text-neon">$@totalIngresos.ToString("N2")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="glass-panel p-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 custom-table">
                <thead>
                    <tr>
                        <th>CLIENTE</th>
                        <th>FECHA</th>
                        <th>MEMBRESÍA</th>
                        <th class="text-end">MONTO</th>
                        <th class="text-center">ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @if (pagos == null || !pagos.Any())
                    {
                        <tr><td colspan="5" class="text-center py-5 text-muted">No hay registros que coincidan.</td></tr>
                    }
                    else
                    {
                        @foreach (var p in pagos)
                        {
                            <tr>
                                <td class="fw-bold">@p.Cliente?.Nombre @p.Cliente?.Apellido</td>
                                <td class="text-white-50">@p.FechaPago.ToShortDateString()</td>
                                <td><span class="badge-type">@p.TipoMembresia</span></td>
                                <td class="text-end text-neon fw-bold">$@p.Monto.ToString("N2")</td>
                                <td class="text-center">
                                    <button class="btn-action edit" @onclick="() => Editar(p.IdPago)" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button class="btn-action delete" @onclick="() => ConfirmDelete(p.IdPago, p.Cliente?.Nombre, p.Monto)" title="Eliminar">
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .dashboard-wrapper {
        padding: 20px;
    }

    .text-neon {
        color: #ccff00;
        text-shadow: 0 0 10px rgba(204, 255, 0, 0.4);
    }

    .glass-panel {
        background: rgba(30, 30, 30, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 15px;
    }

    .label-neon {
        color: #ccff00;
        font-size: 0.7rem;
        font-weight: bold;
        letter-spacing: 1px;
        margin-bottom: 5px;
        display: block;
    }

    .total-badge {
        background: rgba(204, 255, 0, 0.1);
        border: 1px solid #ccff00;
        border-radius: 10px;
        padding: 5px;
    }

    .form-control-dark {
        background: #1a1a1a;
        border: 1px solid #333;
        color: white;
        padding: 8px;
        border-radius: 8px;
        width: 100%;
    }

    .badge-type {
        background: #333;
        color: #fff;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        border: 1px solid #555;
    }

    /* Botones principales */
    .btn-neon {
        background: #ccff00;
        color: #000;
        font-weight: 800;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-neon:hover {
            background: #fff;
            box-shadow: 0 0 15px #ccff00;
        }

    /* Botones de acción en la tabla */
    .btn-action {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #ffffff;
        margin: 0 5px;
        padding: 6px 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-action.edit:hover {
            color: #000;
            background: #ccff00;
            border-color: #ccff00;
            box-shadow: 0 0 10px #ccff00;
        }

        .btn-action.delete:hover {
            color: #fff;
            background: #ff4444;
            border-color: #ff4444;
            box-shadow: 0 0 10px #ff4444;
        }
</style>

@code {
    private List<Pago>? pagos;
    private List<Pago>? todosPagos;
    private List<Cliente>? todosClientes;
    private decimal totalIngresos = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        todosPagos = await Db.Pagos
            .Include(p => p.Cliente)
            .OrderByDescending(p => p.FechaPago)
            .ToListAsync();

        todosClientes = await Db.Clientes
            .OrderBy(c => c.Nombre)
            .ToListAsync();

        pagos = todosPagos;
        CalcularTotales();
    }

    private void CalcularTotales()
    {
        totalIngresos = pagos?.Sum(p => p.Monto) ?? 0;
    }

    private void FiltrarPorCliente(ChangeEventArgs e)
    {
        var id = int.Parse(e.Value?.ToString() ?? "0");
        pagos = (id == 0) ? todosPagos : todosPagos?.Where(p => p.IdCliente == id).ToList();
        CalcularTotales();
    }

    private void FiltrarPorTipo(ChangeEventArgs e)
    {
        var tipo = e.Value?.ToString() ?? "";
        pagos = string.IsNullOrEmpty(tipo) ? todosPagos : todosPagos?.Where(p => p.TipoMembresia == tipo).ToList();
        CalcularTotales();
    }

    private void Crear() => Nav.NavigateTo("/pagos/create");
    private void Editar(int id) => Nav.NavigateTo($"/pagos/edit/{id}");

    private async Task ConfirmDelete(int id, string? nombre, decimal monto)
    {
        var confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar el pago de ${monto:N2} de {nombre}?");
        if (confirmado)
        {
            var p = await Db.Pagos.FindAsync(id);
            if (p != null)
            {
                Db.Pagos.Remove(p);
                await Db.SaveChangesAsync();
                await CargarDatos();
            }
        }
    }
}