@page "/dashboard"
@inject GimnasioContext Db
@rendermode InteractiveServer

<PageTitle>Dashboard - Gimnasio</PageTitle>

<h3>📊 Dashboard y Reportes</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Cargando estadísticas...</p>
    </div>
}
else
{
    <!-- Tarjetas de Resumen -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">👥 Clientes</h5>
                    <h2>@totalClientes</h2>
                    <small>Total registrados</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">📅 Clases</h5>
                    <h2>@totalClases</h2>
                    <small>Total disponibles</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">📝 Reservaciones</h5>
                    <h2>@totalReservaciones</h2>
                    <small>Activas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">💰 Ingresos</h5>
                    <h2>$@totalIngresos.ToString("N2")</h2>
                    <small>Total histórico</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Fila 2: Estadísticas detalladas -->
    <div class="row mb-4">
        <!-- Reservaciones por Estado -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>📊 Reservaciones por Estado</h5>
                </div>
                <div class="card-body">
                    @if (reservacionesPorEstado != null && reservacionesPorEstado.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Estado</th>
                                    <th class="text-end">Cantidad</th>
                                    <th class="text-end">%</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reservacionesPorEstado)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @GetEstadoBadgeClass(item.Estado)">
                                                @item.Estado
                                            </span>
                                        </td>
                                        <td class="text-end">@item.Cantidad</td>
                                        <td class="text-end">@item.Porcentaje.ToString("F1")%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>

        <!-- Ingresos por Tipo de Membresía -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>💵 Ingresos por Tipo de Membresía</h5>
                </div>
                <div class="card-body">
                    @if (ingresosPorTipo != null && ingresosPorTipo.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Tipo</th>
                                    <th class="text-end">Cantidad</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ingresosPorTipo)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @GetTipoBadgeClass(item.Tipo)">
                                                @item.Tipo
                                            </span>
                                        </td>
                                        <td class="text-end">@item.Cantidad</td>
                                        <td class="text-end text-success fw-bold">$@item.Total.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td>TOTAL</td>
                                    <td class="text-end">@ingresosPorTipo.Sum(x => x.Cantidad)</td>
                                    <td class="text-end text-success">$@ingresosPorTipo.Sum(x => x.Total).ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Fila 3: Clases más populares y Clientes con más reservaciones -->
    <div class="row mb-4">
        <!-- Top 5 Clases Más Populares -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>🏆 Top 5 Clases Más Populares</h5>
                </div>
                <div class="card-body">
                    @if (clasesPopulares != null && clasesPopulares.Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Clase</th>
                                    <th>Instructor</th>
                                    <th class="text-end">Reservaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < clasesPopulares.Count; i++)
                                {
                                    var clase = clasesPopulares[i];
                                    <tr>
                                        <td>
                                            @if (i == 0)
                                            {
                                                <span class="badge bg-warning">🥇</span>
                                            }
                                            else if (i == 1)
                                            {
                                                <span class="badge bg-secondary">🥈</span>
                                            }
                                            else if (i == 2)
                                            {
                                                <span class="badge bg-danger">🥉</span>
                                            }
                                            else
                                            {
                                                <span>@(i + 1)</span>
                                            }
                                        </td>
                                        <td>@clase.NombreClase</td>
                                        <td>@clase.Instructor</td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">@clase.TotalReservaciones</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top 5 Clientes con Más Reservaciones -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5>⭐ Top 5 Clientes Más Activos</h5>
                </div>
                <div class="card-body">
                    @if (clientesActivos != null && clientesActivos.Any())
                    {
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Cliente</th>
                                    <th class="text-end">Reservaciones</th>
                                    <th class="text-end">Total Pagado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < clientesActivos.Count; i++)
                                {
                                    var cliente = clientesActivos[i];
                                    <tr>
                                        <td>
                                            @if (i == 0)
                                            {
                                                <span class="badge bg-warning">🥇</span>
                                            }
                                            else if (i == 1)
                                            {
                                                <span class="badge bg-secondary">🥈</span>
                                            }
                                            else if (i == 2)
                                            {
                                                <span class="badge bg-danger">🥉</span>
                                            }
                                            else
                                            {
                                                <span>@(i + 1)</span>
                                            }
                                        </td>
                                        <td>@cliente.NombreCompleto</td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">@cliente.TotalReservaciones</span>
                                        </td>
                                        <td class="text-end text-success fw-bold">$@cliente.TotalPagado.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Fila 4: Clases con Cupos Disponibles -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>📅 Estado de Cupos por Clase</h5>
                </div>
                <div class="card-body">
                    @if (estadoCupos != null && estadoCupos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Clase</th>
                                        <th>Instructor</th>
                                        <th>Horario</th>
                                        <th class="text-center">Cupos Disponibles</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var clase in estadoCupos)
                                    {
                                        <tr>
                                            <td>@clase.NombreClase</td>
                                            <td>@clase.Instructor</td>
                                            <td>@clase.Horario.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">
                                                <span class="badge @GetCuposBadgeClass(clase.CuposDisponibles)">
                                                    @clase.CuposDisponibles
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @if (clase.CuposDisponibles == 0)
                                                {
                                                    <span class="badge bg-danger">LLENO</span>
                                                }
                                                else if (clase.CuposDisponibles <= 5)
                                                {
                                                    <span class="badge bg-warning">POCOS CUPOS</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">DISPONIBLE</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay clases registradas</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Botón para actualizar datos -->
    <div class="text-center mb-4">
        <button class="btn btn-primary btn-lg" @onclick="CargarDatos">
            🔄 Actualizar Datos
        </button>
    </div>
}

@code {
    private bool cargando = true;

    // Estadísticas generales
    private int totalClientes = 0;
    private int totalClases = 0;
    private int totalReservaciones = 0;
    private decimal totalIngresos = 0;

    // Datos para reportes
    private List<ReservacionPorEstado>? reservacionesPorEstado;
    private List<IngresoPorTipo>? ingresosPorTipo;
    private List<ClasePopular>? clasesPopulares;
    private List<ClienteActivo>? clientesActivos;
    private List<Clase>? estadoCupos;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;

        try
        {
            // Estadísticas generales
            totalClientes = await Db.Clientes.CountAsync();
            totalClases = await Db.Clases.CountAsync();
            totalReservaciones = await Db.Reservaciones
                .Where(r => r.Estado != "Cancelada")
                .CountAsync();
            totalIngresos = await Db.Pagos.SumAsync(p => (decimal?)p.Monto) ?? 0;

            // Reservaciones por estado
            reservacionesPorEstado = await Db.Reservaciones
                .GroupBy(r => r.Estado)
                .Select(g => new ReservacionPorEstado
                {
                    Estado = g.Key,
                    Cantidad = g.Count()
                })
                .ToListAsync();

            var totalRes = reservacionesPorEstado.Sum(x => x.Cantidad);
            foreach (var item in reservacionesPorEstado)
            {
                item.Porcentaje = totalRes > 0 ? (item.Cantidad * 100.0 / totalRes) : 0;
            }

            // Ingresos por tipo
            ingresosPorTipo = await Db.Pagos
                .GroupBy(p => p.TipoMembresia)
                .Select(g => new IngresoPorTipo
                {
                    Tipo = g.Key,
                    Cantidad = g.Count(),
                    Total = g.Sum(p => p.Monto)
                })
                .ToListAsync();

            // Top 5 clases más populares
            clasesPopulares = await Db.Reservaciones
                .Where(r => r.Estado != "Cancelada")
                .GroupBy(r => new { r.IdClase, r.Clase!.NombreClase, r.Clase.Instructor })
                .Select(g => new ClasePopular
                {
                    NombreClase = g.Key.NombreClase,
                    Instructor = g.Key.Instructor,
                    TotalReservaciones = g.Count()
                })
                .OrderByDescending(c => c.TotalReservaciones)
                .Take(5)
                .ToListAsync();

            // Top 5 clientes más activos
            clientesActivos = await Db.Clientes
                .Select(c => new ClienteActivo
                {
                    NombreCompleto = c.Nombre + " " + c.Apellido,
                    TotalReservaciones = c.Reservaciones!.Count(r => r.Estado != "Cancelada"),
                    TotalPagado = c.Pagos!.Sum(p => (decimal?)p.Monto) ?? 0
                })
                .Where(c => c.TotalReservaciones > 0)
                .OrderByDescending(c => c.TotalReservaciones)
                .Take(5)
                .ToListAsync();

            // Estado de cupos
            estadoCupos = await Db.Clases
                .OrderBy(c => c.Horario)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    private string GetEstadoBadgeClass(string estado)
    {
        return estado switch
        {
            "Confirmada" => "bg-success",
            "Pendiente" => "bg-warning",
            "Cancelada" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetTipoBadgeClass(string tipo)
    {
        return tipo switch
        {
            "Mensual" => "bg-primary",
            "Anual" => "bg-success",
            "Por Clase" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetCuposBadgeClass(int cupos)
    {
        if (cupos == 0) return "bg-danger";
        if (cupos <= 5) return "bg-warning";
        return "bg-success";
    }

    // Clases auxiliares para los reportes
    private class ReservacionPorEstado
    {
        public string Estado { get; set; } = string.Empty;
        public int Cantidad { get; set; }
        public double Porcentaje { get; set; }
    }

    private class IngresoPorTipo
    {
        public string Tipo { get; set; } = string.Empty;
        public int Cantidad { get; set; }
        public decimal Total { get; set; }
    }

    private class ClasePopular
    {
        public string NombreClase { get; set; } = string.Empty;
        public string Instructor { get; set; } = string.Empty;
        public int TotalReservaciones { get; set; }
    }

    private class ClienteActivo
    {
        public string NombreCompleto { get; set; } = string.Empty;
        public int TotalReservaciones { get; set; }
        public decimal TotalPagado { get; set; }
    }
}