@page "/dashboard"
@using Microsoft.EntityFrameworkCore
@using GimnasioFinal.Data
@inject GimnasioContext Db
@rendermode InteractiveServer

<PageTitle>Dashboard - GYMNATORS</PageTitle>

<div class="dashboard-wrapper animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-neon fw-bold"><i class="bi bi-speedometer2"></i> PANEL DE CONTROL</h2>
        <button class="btn btn-outline-neon btn-sm" @onclick="CargarDatos">
            <i class="bi bi-arrow-clockwise"></i> Actualizar
        </button>
    </div>

    @if (cargando)
    {
        <div class="d-flex flex-column align-items-center justify-content-center" style="height: 400px;">
            <div class="spinner-neon"></div>
            <p class="mt-3 text-neon">Sincronizando datos...</p>
        </div>
    }
    else
    {
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="stat-card-mini">
                    <span class="label">CLIENTES</span>
                    <div class="d-flex align-items-center gap-3">
                        <h2 class="value">@totalClientes</h2>
                        <i class="bi bi-people text-neon fs-3"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-mini">
                    <span class="label">RECAUDACIÓN</span>
                    <div class="d-flex align-items-center gap-3">
                        <h2 class="value">$@totalIngresos.ToString("N0")</h2>
                        <i class="bi bi-currency-dollar text-neon fs-3"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-mini">
                    <span class="label">CLASES</span>
                    <div class="d-flex align-items-center gap-3">
                        <h2 class="value">@totalClases</h2>
                        <i class="bi bi-calendar-check text-neon fs-3"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card-mini">
                    <span class="label">RESERVAS</span>
                    <div class="d-flex align-items-center gap-3">
                        <h2 class="value">@totalReservaciones</h2>
                        <i class="bi bi-bookmark-star text-neon fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="glass-panel p-4">
                    <h5 class="mb-4 fw-bold"><i class="bi bi-star-fill text-neon"></i> CLASES MÁS POPULARES</h5>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover custom-table">
                            <thead>
                                <tr>
                                    <th>Clase</th>
                                    <th>Instructor</th>
                                    <th class="text-center">Reservas</th>
                                    <th class="text-center">Cupos</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var clase in clasesPopulares)
                                {
                                    <tr>
                                        <td class="fw-bold">@clase.NombreClase</td>
                                        <td>@clase.Instructor</td>
                                        <td class="text-center">
                                            <span class="badge-reservas">@clase.TotalReservaciones</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @GetCuposBadgeClass(clase.CuposDisponibles)">
                                                @clase.CuposDisponibles
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="glass-panel p-4 h-100">
                    <h5 class="mb-4 fw-bold"><i class="bi bi-pie-chart-fill text-neon"></i> INGRESOS POR TIPO</h5>
                    <div class="income-list">
                        @foreach (var ingreso in ingresosPorTipo)
                        {
                            <div class="income-item mb-3 p-3 rounded">
                                <div class="d-flex justify-content-between">
                                    <span class="text-white-50">@ingreso.Tipo</span>
                                    <span class="text-neon fw-bold">$@ingreso.Total.ToString("N2")</span>
                                </div>
                                <div class="progress mt-2" style="height: 5px; background: #333;">
                                    <div class="progress-bar bg-neon" style="width: 70%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Estilos del Dashboard */
    .dashboard-wrapper {
        padding: 1rem;
        color: white;
    }

    .text-neon {
        color: #ccff00 !important;
    }

    .bg-neon {
        background-color: #ccff00 !important;
    }

    /* Tarjetas Mini */
    .stat-card-mini {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 15px;
        transition: 0.3s;
    }

        .stat-card-mini:hover {
            border-color: #ccff00;
            background: rgba(204, 255, 0, 0.02);
        }

        .stat-card-mini .label {
            color: #888;
            font-size: 0.75rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .stat-card-mini .value {
            margin: 0;
            font-weight: 800;
            color: #fff;
        }

    /* Paneles de Vidrio */
    .glass-panel {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        backdrop-filter: blur(10px);
    }

    /* Tablas Personalizadas */
    .custom-table {
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .custom-table thead th {
            border: none;
            color: #888;
            font-size: 0.8rem;
            text-transform: uppercase;
        }

        .custom-table tbody tr {
            background: rgba(255, 255, 255, 0.02);
            transition: 0.2s;
        }

            .custom-table tbody tr:hover {
                transform: scale(1.01);
                background: rgba(204, 255, 0, 0.05);
            }

        .custom-table td {
            padding: 1rem;
            border: none;
            vertical-align: middle;
        }

            .custom-table td:first-child {
                border-radius: 10px 0 0 10px;
            }

            .custom-table td:last-child {
                border-radius: 0 10px 10px 0;
            }

    .badge-reservas {
        background: #ccff00;
        color: #000;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 0.8rem;
    }

    /* Spinner Neón */
    .spinner-neon {
        width: 50px;
        height: 50px;
        border: 3px solid rgba(204, 255, 0, 0.1);
        border-top: 3px solid #ccff00;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .btn-outline-neon {
        color: #ccff00;
        border-color: #ccff00;
    }

        .btn-outline-neon:hover {
            background: #ccff00;
            color: #000;
        }
</style>

@code {
    // Mantengo tu lógica de C#, solo ajusto las clases para el nuevo diseño
    private bool cargando = true;
    private int totalClientes;
    private int totalClases;
    private int totalReservaciones;
    private decimal totalIngresos;
    private List<ReservacionPorEstado> reservacionesPorEstado = new();
    private List<IngresoPorTipo> ingresosPorTipo = new();
    private List<ClasePopular> clasesPopulares = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        await Task.Delay(500); // Efecto visual

        totalClientes = await Db.Clientes.CountAsync();
        totalClases = await Db.Clases.CountAsync();
        totalReservaciones = await Db.Reservaciones.CountAsync();
        totalIngresos = await Db.Pagos.SumAsync(p => p.Monto);

        ingresosPorTipo = await Db.Pagos
            .GroupBy(p => p.TipoMembresia)
            .Select(g => new IngresoPorTipo
            {
                Tipo = g.Key,
                Cantidad = g.Count(),
                Total = g.Sum(p => p.Monto)
            }).ToListAsync();

        clasesPopulares = await Db.Clases
            .Select(c => new ClasePopular
            {
                NombreClase = c.NombreClase,
                Instructor = c.Instructor,
                TotalReservaciones = c.Reservaciones.Count(),
                CuposDisponibles = c.CuposDisponibles
            })
            .OrderByDescending(c => c.TotalReservaciones)
            .Take(5)
            .ToListAsync();

        cargando = false;
    }

    private string GetCuposBadgeClass(int cupos) => cupos switch
    {
        0 => "bg-danger",
        <= 5 => "bg-warning text-dark",
        _ => "bg-success"
    };

    private class ReservacionPorEstado { public string Estado { get; set; } = ""; public int Cantidad { get; set; } }
    private class IngresoPorTipo { public string Tipo { get; set; } = ""; public decimal Total { get; set; } public int Cantidad { get; set; } }
    private class ClasePopular { public string NombreClase { get; set; } = ""; public string Instructor { get; set; } = ""; public int TotalReservaciones { get; set; } public int CuposDisponibles { get; set; } }
}